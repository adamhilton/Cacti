@model Sakura.AspNetCore.IPagedList<ContentTag>

@{
    ViewBag.Title = "content tags";
}

<div id="blog-posts-header" class="pull-right">
    <a asp-controller="admin" asp-action="createcontenttag" class="btn btn-info btn-md">Create content tag</a>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-4 col-md-8 ">
        <pager />
    </div>
</div>

<ul class="list-unstyled">
    @foreach (var item in Model)
    {
        <li class="blog-posts-list">
            <div class="row">
                <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-4 col-md-8">
                    <a asp-controller="admin" asp-action="editcontenttag" asp-route-name="@item.Name">
                        <h3>@item.Name</h3>
                    </a>
                </div>
            </div>
    </li>
    }
</ul>

<div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-4 col-md-8 ">
        <pager />
    </div>
</div>